<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  </head>
  <body>
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand" href="#"><img alt="Pinterest" src=""></a>
        </div>
        <div class="collapse navbar-collapse">
         <ul class="nav navbar-nav">
           <li class="active"><a href="#">Home <span class="sr-only">(current)</span></a></li>
           <li class="my-pins"><a href="#">My Pins <span class="sr-only">(current)</span></a></li>
         </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><button type="button" class="btn btn-primary navbar-btn add-pin" data-toggle="modal" data-target="#myModal">Add Pin</button></li>
            <li><button type="button" class="btn btn-default navbar-btn">Sign in</button></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container app-body">
      <!-- Modal -->
      <div id="myModal" class="modal fade new-pin-modal" role="dialog">
        <div class="modal-dialog add-pin-modal">
          <!-- Modal Content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Add A New Pin</h4>
            </div>
            <form action="/pins/add" method="post">
              <div class="modal-body">
                <div class="form-group">
                  <div class="form-group">
                    <label for="new-pin-url" class="col-form-label">Pin Url:</label>
                    <input type="text" class="form-control" id="new-pin-url" name="pinURL">
                  </div>
                  <div class="form-group">
                    <label for="pin-description" class="col-form-label">Pin Description:</label>
                    <input type="text" class="form-control" id="pin-description" name="pinDescription">
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save Pin</button>
                </div>
              </div>
            </form>
          </div>
          <!-- Modal Content Ends-->
        </div>
      </div>
      <!-- Modal Ends -->
      <div class="cards">
        <div class="card">
          <!-- <div class="card-content"> -->
          <button type="button" class="pin-delete">X</button>
          <div class="card-img">
            <img src="http://static2.businessinsider.com/image/5a0e76def914c346018b4812-1500/roadsterfrontprofile.jpg"/>
          </div>
          <div class="card-title">
            <p>Tesla Roadster 2017</p>
          </div>
          <div class="card-bot">
            <div class="user-img">
              <img src="/images/abstract-user-flat-1.svg">
            </div>
            <div class="like-button">
              <button type="button" name="button">&#x2606; </button>
            </div>
          </div>
        </div>
        <% pins.forEach(function(pin) { %>
          <div class="card">
            <!-- <div class="card-content"> -->
            <button type="button" class="pin-delete">X</button>
            <div class="card-img">
              <img src="<%= pin.url %>"/>
            </div>
            <div class="card-title">
              <p><%= pin.description %> </p>
            </div>
            <div class="card-bot">
              <div class="user-img">
                <img src="/images/abstract-user-flat-1.svg">
              </div>
              <div class="like-button">
                <button type="button" name="button">&#x2606; </button>
              </div>
            </div>
          </div>
        <% }) %>
          <!-- </div> -->
        <div class="card"><div class="card-content height-lg">2</div></div>
        <div class="card"><div class="card-content">3</div></div>
        <div class="card"><div class="card-content">4</div></div>
        <div class="card"><div class="card-content height-med">5</div></div>
        <div class="card"><div class="card-content">6</div></div>
        <div class="card"><div class="card-content height-med">7</div></div>
        <div class="card"><div class="card-content">8</div></div>
        <div class="card"><div class="card-content height-lg">9</div></div>
        <div class="card"><div class="card-content">10</div></div>
        <div class="card"><div class="card-content height-med">11</div></div>
        <div class="card"><div class="card-content">12</div></div>
        <div class="card"><div class="card-content height-med">13</div></div>
        <div class="card"><div class="card-content height-med">14</div></div>
        <div class="card"><div class="card-content">15</div></div>
      </div>
    </div>
    <!-- scripts -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="https://masonry.desandro.com/masonry.pkgd.js"></script>
    <script src="https://unpkg.com/masonry-layout@4/dist/masonry.pkgd.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="/javascripts/jQuery.js" type="text/javascript"></script>
  </body>
</html>
